generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String?
  email     String     @unique 
  password  String
  otp       String?
  isActive Boolean    @default(false)
  selectedCategories  Int[]
  createdAt DateTime? @default(now())
}


model Category {
  id    Int     @id @default(autoincrement())
  categoryName  String  @unique 
}